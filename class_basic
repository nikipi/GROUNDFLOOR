class Read():
    def __init__(self,url):
        self.url = url
        self.df=pd.read_csv(url,sep='\\t',engine='python')
    def hd(self):
        return self.df.head()
    def db(self):
        print(self.df.describe())
    def info(self):
        print(self.df.info())
    def null(self):
        print(self.df.isnull().sum())
    def drop(self):
        self.df=self.df.dropna()


class Person:
  def name(self, name):
            self.name = name
            return self
 
  def age(self, age):
    self.age = age
    return self

  def show(self):
       print("My name is", self.name, "and I am", self.age, "years old.")

p = Person()
p.name("Li Lei").age(15).show()
