import random

class Die(object):

    def __init__(self):
        self.side=6
        self.roll()

    def roll(self):
        self.value=1+random.randrange(self.sides)
        return self.value
    def getValue(self):
              return self.value
              
d1,d2=Die(),Die()
for n in range(12):
    print(d1.roll(),d2.roll())
              
              
              
class Circle(object):
    def __init__(self,name='',radius=0,x=0,y=0):
        self.radius=radius
        self.x=x
        self.y=y
        self.name=name
    def set_center(self,x,y):
        self.x=x
        self.y=y
    def set_radius(self,r):
        self.radius=r
    def set_name(self,s):
        self.name=s
    def blow_up(self,mutipliter=1.1):
        self.radius*=mutipliter

    def __repr__(self):
        return self.name + ": " + format(self.radius, ".2f") + \
               " at (" + format(self.x, ".2f") + \
               "," + format(self.y, ".2f") + ")"\

c=Circle()

print(c)
c.set_name('blue')
c.set_radius(2)
c.set_center(-1,3)

print(c)


class myStruct():
    def __init__(self, name, salary, doB, title):
        self.name = name
        self.salary = salary
        self.doB = doB
        self.title = title

name = raw_input('Enter name: ')
salary = raw_input('Enter salary: ')
doB = raw_input('Enter doB: ')
title = raw_input('Enter title: ')

new_object = myStruct(name, salary, dob, title)

class myStruct():
    def __init__(self,name=None,salary=None,doB=None,title=None):
        if not name:
            self.name = raw_input('Enter name: ')
        else:
            self.name=name
        if not salary:
            self.salary = raw_input('Enter salary: ')
        else:
            self.salary=salary
        if not soB:
            self.doB = raw_input('Enter doB: ')
        else:
            self.doB=doB
        if not title:
            self.title = raw_input('Enter title: ')
        else:
            self.title=title


